<local:FilePathControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="clr-namespace:Keysight.OpenTap.Wpf"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Name="This">
  <UIElement.CommandBindings>
    <CommandBinding Command="local:FilePathControl.Browse"/>
    <CommandBinding Command="local:FilePathControl.Open"/>
  </UIElement.CommandBindings>
  <FrameworkElement.Resources>
    <ResourceDictionary Source="/Keysight.OpenTap.Wpf;component/DefaultStyle.xaml"/>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Button Name="browseButton" Grid.Column="0" Command="local:FilePathControl.Browse" Padding="4,3">...</Button>
    <Button Name="openButton" Grid.Column="1" Command="local:FilePathControl.Open" Padding="4,3" Margin="2,0"
            ToolTip="Open file.">
      <Control VerticalAlignment="Center" HorizontalAlignment="Center" Template="{DynamicResource Tap.Open}"/>
    </Button>
  </Grid>
</local:FilePathControl>