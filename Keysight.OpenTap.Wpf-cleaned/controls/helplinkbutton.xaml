<HelpLinkButton xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                Visibility="Collapsed">
  <Viewbox Name="helpViewBox" Opacity="0.8" Stretch="Uniform"
           Height="{DynamicResource Tap.DataGrid.RowHeight.Medium}">
    <Button Name="HelpBtn" Margin="0" BorderThickness="0" Width="20" Height="21" Padding="0" Command="Help"
            Background="Transparent" Style="{DynamicResource WslWindow.HelpButton.Style}" ToolTip="Help"/>
  </Viewbox>
</HelpLinkButton>