<NetworkLicenseSetup xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:ui="clr-namespace:Keysight.Ccl.Wsl.UI;assembly=Keysight.Ccl.Wsl"
                     SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" HasSysMenuIcon="False"
                     ShowInTaskbar="True" Title="Configure Floating license server">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Keysight.OpenTap.Wpf;component/DefaultStyle.xaml"/>
      </ResourceDictionary.MergedDictionaries>
      <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="500"/>
    </Grid.ColumnDefinitions>
    <TextBlock Grid.Row="0" Margin="10" TextWrapping="Wrap" FontWeight="Bold">
      Floating license server name:
    </TextBlock>
    <TextBox Name="LicenseServerName" Grid.Row="1" Margin="10,10,10,0" HorizontalAlignment="Stretch"
             ToolTip="For example, 27000@licenses.company.com" VerticalAlignment="Center"/>
    <TextBlock Grid.Row="2" Margin="10,0" FontStyle="Italic"
               Foreground="{DynamicResource Control.Disabled.Foreground}"
               Text="Format: &lt;PORT&gt;@&lt;HOSTNAME or IP&gt;"/>
    <TextBlock Grid.Row="3" Margin="10">
      This change will take effect the next time you start the application.
    </TextBlock>
    <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right">
      <Button Name="CloseBtn" Margin="10, 20, 10,10 " IsDefault="True" HorizontalAlignment="Right"
              VerticalAlignment="Center">Save and close</Button>
      <Button Margin="0, 20, 10,10 " IsCancel="True" HorizontalAlignment="Right" VerticalAlignment="Center">Cancel</Button>
    </StackPanel>
  </Grid>
</NetworkLicenseSetup>