<local:NewStepDialog xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:ui="clr-namespace:Keysight.Ccl.Wsl.UI;assembly=Keysight.Ccl.Wsl"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:Keysight.OpenTap.Wpf"
                     Title="Add New Step" Icon="/Editor;component/../Images/Gui.png" SizeToContent="Manual"
                     WindowStartupLocation="CenterOwner" HasHelpButton="True" Height="500" Width="450"
                     Background="{DynamicResource Tap.Window.Background}" MinHeight="300" MinWidth="300">
  <FrameworkElement.Resources>
    <ResourceDictionary Source="../DefaultStyle.xaml"/>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <local:NewStepControl x:Name="newStepControl" Margin="4" Background="{DynamicResource Tap.Panel.Background}"/>
    <Button Name="CloseBtn" Grid.Row="1" HorizontalAlignment="Right" Margin="2,2,5,5" Padding="6,4"
            Content="Close" IsCancel="True"/>
  </Grid>
</local:NewStepDialog>