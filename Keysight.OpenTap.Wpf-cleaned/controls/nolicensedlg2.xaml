<wpf:NoLicenseDlg2 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:wpf="clr-namespace:Keysight.OpenTap.Wpf"
                   Background="{DynamicResource Tap.Panel.Background}">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Keysight.OpenTap.Wpf;component/DefaultStyle.xaml"/>
      </ResourceDictionary.MergedDictionaries>
      <BooleanToVisibilityConverter x:Key="BoolToVis"/>
      <wpf:BooleanToInvisibilityConverter x:Key="BoolToInvis"/>
      <wpf:InvertBooleanConverter x:Key="BoolInvert"/>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Name="baseGrid" Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap">
      <Run Text="{Binding Exception.Feature, Mode=OneWay}"/>
      requires a license, and a valid
      <TextBlock Text="license" TextDecorations="Underline" Cursor="Hand"
                 ToolTip="{Binding ExceptionString, Mode=OneWay}"/>
      was NOT found.
    </TextBlock>
    <TextBlock Grid.Row="1" Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap"
               Visibility="{Binding SuggestPlwmInstall, Converter={StaticResource BoolToVis}}">
      PathWave License Manager is not installed. Please install PathWave License Manager.
    </TextBlock>
    <TextBlock Grid.Row="1" Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap"
               Visibility="{Binding NotPwlmCandidate, Converter={StaticResource BoolToVis}}">
      For 32-bit applications only Keysight Fixed or Floating Licensing is available. Contact your Keysight representative for more information.
    </TextBlock>
    <Button Name="InstallPWLMButton" Grid.Row="2" Margin="10" HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Visibility="{Binding SuggestPlwmInstall, Converter={StaticResource BoolToVis}}">
      <TextBlock>
        Install PathWave License Manager
      </TextBlock>
    </Button>
    <Button Name="OpenPWLMButton" Grid.Row="2" Margin="10" HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Visibility="{Binding PWLMInstalled, Converter={StaticResource BoolToVis}, FallbackValue=Visible}">
      <TextBlock>
        Open PathWave License Manager
      </TextBlock>
    </Button>
    <Button Name="RequestTrialLicensBtn" Grid.Row="3" Margin="10" HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Visibility="{Binding PWLMInstalled, Converter={StaticResource BoolToVis}}">
      Request Trial License
    </Button>
  </Grid>
</wpf:NoLicenseDlg2>