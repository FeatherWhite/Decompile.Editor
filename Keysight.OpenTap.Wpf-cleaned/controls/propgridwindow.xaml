<controls:PropGridWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:ui="clr-namespace:Keysight.Ccl.Wsl.UI;assembly=Keysight.Ccl.Wsl"
                         xmlns:controls="clr-namespace:Keysight.OpenTap.Wpf"
                         WindowStartupLocation="CenterOwner" SizeToContent="Height" Title="Waiting for user input."
                         MinHeight="130" MinWidth="300" Width="400" Height="300">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Keysight.OpenTap.Wpf;component/Themes/Generic.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <controls:PropGrid x:Name="propgrid" Loaded="a"/>
    <Button Name="button" Grid.Row="1" HorizontalAlignment="Right" Padding="5,3" Margin="1" Width="55"
            Visibility="Collapsed">Ok</Button>
  </Grid>
</controls:PropGridWindow>