<SettingsDialogNewSetWindow xmlns:ui="clr-namespace:Keysight.Ccl.Wsl.UI;assembly=Keysight.Ccl.Wsl"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            x:Name="This" WindowStartupLocation="CenterOwner" Title="New Settings Profile" Width="350"
                            ResizeMode="NoResize" SizeToContent="Height">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../DefaultStyle.xaml"/>
      </ResourceDictionary.MergedDictionaries>
      <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FrameworkElement.Margin" Value="1,0,10,0"/>
        <Setter Property="FrameworkElement.VerticalAlignment" Value="Center"/>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Name="grid" Margin="4">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <TextBox Name="SettingsProfileTextBox" HorizontalAlignment="Stretch" Grid.Row="0" Margin="6"
               Text="{Binding ConfigName, UpdateSourceTrigger=PropertyChanged}"/>
      <Border Grid.Row="1" Margin="4"/>
      <Border Grid.Row="2" Margin="6">
        <TextBlock TextWrapping="Wrap" Margin="0,8,0,0">
          Please specify a name for the new settings profile.
        </TextBlock>
      </Border>
    </Grid>
    <TextBlock x:Name="errorText" Grid.Row="1" Foreground="Crimson" Text="{Binding Error}"/>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="3"
                Margin="0,4,0,0">
      <Button x:Name="buttonAdd" Content="Add" Margin="2" Padding="8,4" IsDefault="True"
              IsEnabled="{Binding HasNoError}"/>
      <Button Content="Cancel" Margin="2,2,0,2" IsCancel="True" Padding="4,4"/>
    </StackPanel>
  </Grid>
</SettingsDialogNewSetWindow>