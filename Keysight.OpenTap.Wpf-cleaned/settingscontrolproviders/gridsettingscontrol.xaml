<controls:GridSettingsControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:controls="clr-namespace:Keysight.OpenTap.Wpf">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <controls:PropertyDataGrid x:Name="dataGrid" SourceUpdated="DataGrid_SourceUpdated" CellEditEnding="DataGrid_OnCellEditEnding"
                               IsEnabled="{Binding Path=DataContext.Settings.AllowEdit, RelativeSource={RelativeSource AncestorType={x:Type controls:SettingsDialog}}}"/>
    <StackPanel Orientation="Horizontal" Grid.Row="1"
                Visibility="{Binding IsEnabled, ElementName=addRow, Converter={controls:VisibilityConverter}}">
      <Button Name="addRow" Width="50" Margin="2" ToolTip="Add rows." Command="controls:PropertyDataGrid.AddRow"
              Content="+" CommandTarget="{Binding ElementName=dataGrid}"/>
      <Button Width="50" Margin="2" ToolTip="Remove the selected row."
              Command="controls:PropertyDataGrid.DeleteRow" Content="-"
              CommandTarget="{Binding ElementName=dataGrid}"/>
    </StackPanel>
  </Grid>
</controls:GridSettingsControl>