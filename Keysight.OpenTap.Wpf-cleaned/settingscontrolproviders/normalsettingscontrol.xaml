<controls:NormalSettingsControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:controls="clr-namespace:Keysight.OpenTap.Wpf">
  <FrameworkElement.Resources>
    <controls:DisplayNameAttributeConverter x:Key="displayNameAttributeConverter"/>
  </FrameworkElement.Resources>
  <controls:PropGrid PropertyEdited="PropGridLite_PropertyEdited" Margin="2" UndoEnabled="true"
                     ContentEnabled="{Binding Path=DataContext.Settings.AllowEdit, RelativeSource={RelativeSource AncestorType={x:Type controls:SettingsDialog}}}"
                     DebugMode="{Binding Source={x:Static controls:EditorSettings.Current}, Path=ShowPropertyInTooltip}"
                     DataContext="{Binding NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                     AutomationProperties.AutomationId="{Binding Converter={StaticResource displayNameAttributeConverter}}"/>
</controls:NormalSettingsControl>