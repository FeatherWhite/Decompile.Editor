<local:ErrorAdornerView xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:local="clr-namespace:Keysight.OpenTap.Gui"
                        Focusable="False">
  <FrameworkElement.Resources>
    <ResourceDictionary Source="/Keysight.OpenTap.Wpf;component/DefaultStyle.xaml"/>
  </FrameworkElement.Resources>
  <Decorator Name="a"
             DataContext="{Binding Path=(local:AttachedAdorner.AdornerParameter), RelativeSource={RelativeSource Mode=Self}}">
    <Decorator Name="b">
      <Grid VerticalAlignment="Stretch" Background="Transparent" ToolTip="{Binding}">
        <Rectangle Name="c" Width="15" Height="15" Margin="1,0" Fill="{StaticResource InformationBrush}"
                   Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Right"/>
      </Grid>
      <FrameworkElement.Style>
        <Style TargetType="{x:Type Decorator}">
          <Style.Triggers>
            <Trigger Property="FrameworkElement.DataContext" Value="">
              <Setter Property="UIElement.Visibility" Value="Collapsed"/>
            </Trigger>
          </Style.Triggers>
        </Style>
      </FrameworkElement.Style>
    </Decorator>
  </Decorator>
</local:ErrorAdornerView>