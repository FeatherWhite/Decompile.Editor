<RunCompletedOverlay xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Keysight.OpenTap.Wpf;component/DefaultStyle.xaml"/>
      </ResourceDictionary.MergedDictionaries>
      <Storyboard x:Key="FadeOut">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" AccelerationRatio="0.5" To="0" Duration="0:0:1.2"/>
      </Storyboard>
      <Storyboard x:Key="FadeIn">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.3" DecelerationRatio="0.7" To="1" Duration="0:0:0.6"/>
      </Storyboard>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Height="100">
    <Border Name="a" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Opacity="0.4"
            IsHitTestVisible="False" Background="{Binding Foreground, ElementName=b}"
            DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    <TextBlock Name="b" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="45" FontWeight="Bold"
               AutomationProperties.AutomationId="RunCompletedOverlayTextBlock"/>
  </Grid>
</RunCompletedOverlay>