<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Keysight.OpenTap.Wpf;assembly=Keysight.OpenTap.Wpf"
                    xmlns:gui="clr-namespace:Keysight.OpenTap.Gui">
  <Style TargetType="{x:Type controls:SettingsMenuItem}" BasedOn="{StaticResource {x:Type MenuItem}}">
    <Setter Property="ItemsControl.ItemsSource" Value="{Binding}"/>
    <Setter Property="MenuItem.Command" Value="controls:TapSettings.Open"/>
    <Setter Property="MenuItem.CommandTarget"
            Value="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    <Setter Property="MenuItem.CommandParameter" Value="{Binding}"/>
  </Style>
  <DataTemplate DataType="{x:Type gui:UserPanel}">
    <ContentPresenter VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding Content}"/>
  </DataTemplate>
</ResourceDictionary>