<local:WelcomeScreen xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:Keysight.OpenTap.Gui"
                     xmlns:wsl="clr-namespace:Keysight.Ccl.Wsl.UI.Managers;assembly=Keysight.Ccl.Wsl"
                     xmlns:controls="clr-namespace:Keysight.OpenTap.Wpf;assembly=Keysight.OpenTap.Wpf"
                     Background="{DynamicResource Tap.Panel.Background}">
  <FrameworkElement.Resources>
    <ResourceDictionary Source="/Keysight.OpenTap.Wpf;component/DefaultStyle.xaml"/>
  </FrameworkElement.Resources>
  <Grid>
    <FrameworkElement.Resources>
      <Style x:Key="WelcomeCloseButtonStyle" TargetType="{x:Type Button}"
             BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="ContentControl.ContentTemplate">
          <Setter.Value>
            <DataTemplate>
              <Rectangle VerticalAlignment="Center" HorizontalAlignment="Center" Width="10" Height="10"
                         Fill="{DynamicResource Tap.Delete}"/>
            </DataTemplate>
          </Setter.Value>
        </Setter>
        <Style.Triggers>
          <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
            <Setter Property="Control.Foreground" Value="{DynamicResource Tap.Highlight}"/>
          </DataTrigger>
          <DataTrigger Binding="{Binding ComputedVerticalScrollBarVisibility, ElementName=b}" Value="Visible">
            <Setter Property="FrameworkElement.Margin" Value="0,0,17,0"/>
          </DataTrigger>
        </Style.Triggers>
      </Style>
      <DataTemplate x:Key="FileLinkTemplate" DataType="{x:Type local:FileLink}">
        <StackPanel Orientation="Horizontal">
          <Image Width="18" Height="18" Margin="10,4,0,0" Source="{Binding Image}"/>
          <TextBlock Margin="5,5,0,0">
            <Hyperlink x:Name="examplesLink" NavigateUri="{Binding Path, Converter={local:ToFullPathConverter}}">
              <TextBlock Text="{Binding FriendlyName}"/>
            </Hyperlink>
          </TextBlock>
        </StackPanel>
      </DataTemplate>
    </FrameworkElement.Resources>
    <ScrollViewer x:Name="b" VerticalScrollBarVisibility="Auto">
      <StackPanel HorizontalAlignment="Stretch" MaxWidth="720" VerticalAlignment="Stretch">
        <StackPanel Margin="10">
          <TextBlock FontSize="20" FontWeight="DemiBold" TextWrapping="Wrap">
            Welcome to Keysight Test Automation
          </TextBlock>
          <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
            It will let you quickly and easily automate your tests, view and analyze results, and optimize test performance.
          </TextBlock>
        </StackPanel>
        <WrapPanel Orientation="Horizontal">
          <StackPanel Width="340" Margin="10,10,10,10">
            <TextBlock FontWeight="DemiBold" FontSize="14" TextWrapping="Wrap">With it you can:</TextBlock>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="• " Margin="0,5,0,0" VerticalAlignment="Top"/>
              <TextBlock TextWrapping="Wrap" Margin="0,5,0,0" Width="320">
                Use the SDK to create custom plugins for devices under test (DUTs), instruments, and test steps
              </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="• " Margin="0,5,0,0" VerticalAlignment="Top"/>
              <TextBlock TextWrapping="Wrap" Margin="0,5,0,0" Width="320">
                Create test plans using supplied test steps, third-party developed test steps, and your own custom test steps
              </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="• " Margin="0,5,0,0" VerticalAlignment="Top"/>
              <TextBlock TextWrapping="Wrap" Margin="0,5,0,0" Width="320">
                Run test plans, save and view results (Using the Results Viewer)
              </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="• " Margin="0,5,0,0" VerticalAlignment="Top"/>
              <TextBlock TextWrapping="Wrap" Margin="0,5,0,0" Width="320">
                Analyze and optimize test plan timing (Using the Timing Analyzer)
              </TextBlock>
            </StackPanel>
            <CheckBox Width="300" Margin="0,30,10,20" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                      AutomationProperties.AutomationId="EnableWelcomeScreenAtStartupCheckbox"
                      IsChecked="{Binding ShowWelcomeScreen, Source={x:Static controls:EditorSettings.Current}}">
              <TextBlock TextWrapping="Wrap">
                Show welcome screen at startup. (Use Editor settings to show or hide later)
              </TextBlock>
            </CheckBox>
          </StackPanel>
          <StackPanel Width="340" Margin="10,10,10,20">
            <TextBlock FontWeight="DemiBold" FontSize="14">Getting Started</TextBlock>
            <TextBlock wsl:HelpManager.HelpLink="EditorHelp.chm::/Getting Started/Readme.html" TextWrapping="Wrap"
                       Margin="0,5,0,0">
              Click
              <Hyperlink Command="Help" Foreground="{DynamicResource Tap.Highlight}" TextDecorations="None">here</Hyperlink>
              for a step-by-step procedure showing how to:
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="10,5,0,0">
              • Create and run test plans
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="10,5,0,0">
              • Save test plan results to a database
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="10,5,0,0">
              • View test plan results
            </TextBlock>
            <StackPanel x:Name="c" Visibility="Collapsed">
              <TextBlock FontWeight="DemiBold" FontSize="14" Margin="0,10,0,0" Text="Plugin Development"/>
              <ContentPresenter ContentTemplate="{StaticResource FileLinkTemplate}">
                <ContentPresenter.Content>
                  <local:FileLink FriendlyName="SDK Examples" Path="Packages\SDK\Examples\"/>
                </ContentPresenter.Content>
              </ContentPresenter>
              <ContentPresenter ContentTemplate="{StaticResource FileLinkTemplate}">
                <ContentPresenter.Content>
                  <local:FileLink FriendlyName="Developer Guide" Path="Packages\SDK\OpenTAP Developer Guide.pdf"/>
                </ContentPresenter.Content>
              </ContentPresenter>
            </StackPanel>
            <TextBlock FontWeight="DemiBold" FontSize="14" Margin="0,20,0,0" Text="Open Recent Test Plan Files"/>
            <StackPanel x:Name="d" Margin="10,0,10,10"/>
          </StackPanel>
        </WrapPanel>
      </StackPanel>
    </ScrollViewer>
    <Button Style="{StaticResource WelcomeCloseButtonStyle}" HorizontalAlignment="Right"
            VerticalAlignment="Top" AutomationProperties.AutomationId="WelcomeScreenCloseButton"/>
  </Grid>
</local:WelcomeScreen>